<h1>DotBlog as Medium</h1>

<% if @posts.any? %>
  <table>
    <thead>
    <tr>

      <th>Title</th>
      <% if user_signed_in? %>
        <th>Created By</th>
        <th>Created Date</th>
      <% end %>
    </tr>
    </thead>
    <tbody>
    <% for post in @posts %>
      <tr>
        <% if user_signed_in? %>
          <td><%= link_to post.title, post_path(post.id) %></td>
          <td><%= link_to post.user.username, welcome_user_page_path(post.user.id) %></td>
          <td><%= post.created_at %></td>
        <% else %>
          <td><%= post.title %></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  no post here.
<% end %>