<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<% if @posts.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.visible %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  You don't have a post.
<% end %>
<br>

<h1>Comments</h1>

<% if @comments.any? %>
  <table>
    <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Visible</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.content %></td>
        <td><%= comment.accept %></td>
        <td><%= link_to 'Accept', post_comment_path(comment.post, comment.id) %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  No Accepted Comment
<% end %>

<br>
<%= link_to 'New Post', new_post_path %>