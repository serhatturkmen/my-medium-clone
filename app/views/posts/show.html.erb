<p>
<h1>
  <%= @post.title %>
</h1>
</p>
<p>
  ‚úç <%= link_to @post.user.username, user_detail_path(@post.user) %> | ‚è±Ô∏è<%= @post.created_at %>
</p>

<p>
  <%= @post.content %>
</p>

<br>

<p> Vote(<strong id="vote_count"><%= @post.vote_count %></strong>)
  <% if user_signed_in? && @user != current_user %>
    <%= link_to 'üëç', vote_add_post_path(@post), method: :patch, class: 'btn btn-primary', remote: true %>
    | <%= link_to 'üëé', vote_reduce_post_path(@post), method: :patch, class: 'btn btn-primary', remote: true %>
  <% end %>
</p>

<br>

<div>

  <h2>Comments</h2>
  <br>
  <% if @comments.any? %>
    <% @comments.each do |comment| %>
      <p><%= comment.title %></p>
      <p><%= comment.content %></p>
      <hr>
    <% end %>
  <% else %>
    <p>There is no comment</p>
  <% end %>
  <br>
</div>
<h2>Add a comment</h2>

<%= form_with model: [@post, @post.comments.build] do |form| %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </p>
  <p>
    <%= form.label :content %>
    <%= form.text_area :content, class: 'form-control' %>
  </p>

  <p>
    <%= form.submit :class => 'form-control btn btn-primary' %>
  </p>
<% end %>

<br>

<% if current_user == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% end %>
<%= link_to 'Back', _back_url %>
