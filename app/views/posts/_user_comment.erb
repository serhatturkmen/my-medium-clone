<div class="card mb-5">
  <div class="card-heading text-center p-3 border">
    <b><%= user_comments.title %></b>
    <span class="badge badge-pill badge-success float-right">Waiting for Accept</span>
  </div>
  <div class="card-body">
    <%= user_comments.content %>
  </div>
  <div class="card-footer">
    <div class="row text-center">
      <div class="col-sm-6">
        ✍ <%= user_comments.user.username %><br>
      </div>
      <div class="col-sm-6">
        ⏱️ <%= time_ago_in_words(user_comments.created_at) %>
      </div>
    </div>
  </div>
</div>
