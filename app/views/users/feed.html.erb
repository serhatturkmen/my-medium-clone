<h1>DotBlog as Medium</h1>
<div class="row">
  <div class="col-sm-8">
    <% if @posts.any? %>
      <% for post in @posts %>
        <div class="jumbotron" style="padding: 10px;">
          <h2><%= link_to post.title, post_path(post.id) %></h2>
          <p>‚úç <%= link_to post.user.username, user_detail_path(post.user) %> |
            ‚è±Ô∏è<%= time_ago_in_words(post.created_at) %> ago | üìù <%= post.comments.accepted.count %> </p>
          <p><%= substr(post.content) %></p>
          <p>Vote: <%= post.vote_count %></p>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-warning">
        No post here. Can you add a post.
      </div>
    <% end %>
  </div>
  <div class="col-sm-4 jumbotron">
    <% if @users.count <= 1 %>
      <h3>No users other than you</h3>
    <% else %>
      <h3>New Users</h3>
      <% for user in @users %>
        <p>
          <%= link_to user.username, user_detail_path(user) %> -
          <%= user.posts.count %> posts
        </p>
      <% end %>
    <% end %>
  </div>
</div>

